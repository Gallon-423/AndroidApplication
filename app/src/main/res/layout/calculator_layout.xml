<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd">
    <TextView
        android:id="@+id/top_line"
        android:textSize="38sp"
        android:layout_width="wrap_content"
        android:layout_height="150dp"/>
    <ImageView
        android:id="@+id/iv_figure"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/leader"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_ce"
            android:text="CE"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/ordinary_selector"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_c"
            android:text="C"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/ordinary_selector"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_del"
            android:text="DEL"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/ordinary_selector"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_divide"
            android:text="➗"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/sign_selector"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_seven"
            android:text="7"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/ordinary_selector"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_eight"
            android:text="8"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/ordinary_selector"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_nine"
            android:text="9"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/ordinary_selector"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_multiply"
            android:text="X"
            android:gravity="center"
            android:textSize="28sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/sign_selector"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_four"
            android:text="4"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/ordinary_selector"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_five"
            android:text="5"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/ordinary_selector"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_six"
            android:text="6"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/ordinary_selector"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_minus"
            android:text="-"
            android:gravity="center"
            android:textSize="60sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/sign_selector"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_one"
            android:text="1"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/ordinary_selector"
            android:layout_marginEnd="4dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_two"
            android:text="2"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/ordinary_selector"
            android:layout_marginEnd="4dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_three"
            android:text="3"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/ordinary_selector"
            android:layout_marginEnd="4dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_plus"
            android:text="➕"
            android:gravity="center"
            android:textSize="22sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/sign_selector"
            android:layout_marginEnd="4dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_negative_or_positive"
            android:text="+/-"
            android:gravity="center"
            android:textSize="40sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/sign_selector"
            android:layout_marginEnd="4dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_zero"
            android:text="0"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/sign_selector"
            android:layout_marginEnd="4dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_dot"
            android:text="."
            android:gravity="center"
            android:textSize="50sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/sign_selector"
            android:layout_marginEnd="4dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_equal"
            android:text="="
            android:gravity="center"
            android:textSize="40sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/sign_selector"
            android:layout_marginEnd="4dp"
            android:layout_height="match_parent"/>
    </LinearLayout>


</LinearLayout>